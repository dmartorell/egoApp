{
  "name": "@egoapp/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API server for EgoApp",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
