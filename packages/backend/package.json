{
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.1",
    "dotenv": "^17.2.2",
    "fs-extra": "^11.3.2",
    "pdf-parse": "^1.1.1"
  },
  "description": "Backend API server for EgoApp",
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/pdf-parse": "^1.1.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "main": "dist/index.js",
  "name": "@egoapp/backend",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .turbo node_modules/.cache",
    "dev": "tsx watch src/index.ts",
    "extract:all": "tsx scripts/data-extraction/extract-all.ts",
    "extract:document": "tsx scripts/data-extraction/extract-document.ts",
    "extract:el-pais": "tsx scripts/data-extraction/extract-document.ts el-pais",
    "extract:escritura": "tsx scripts/data-extraction/extract-document.ts escritura-transparente",
    "extract:merge": "tsx scripts/data-extraction/merge-rules.ts",
    "extract:toc-guided": "tsx scripts/data-extraction/extract-toc-guided.ts",
    "lint": "eslint 'src/**/*.{js,ts}' --max-warnings 0",
    "lint:check": "eslint 'src/**/*.{js,ts}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "version": "0.1.0"
}
