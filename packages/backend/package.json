{
  "name": "@egoapp/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API server for EgoApp",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.{js,ts}' --max-warnings 0",
    "lint:check": "eslint 'src/**/*.{js,ts}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist .turbo node_modules/.cache"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.13.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  }
}
